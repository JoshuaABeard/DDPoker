# EditorConfig - Consistent coding styles across editors and IDEs
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Java source files
[*.java]
indent_style = space
indent_size = 4

# XML files (POM, config)
[*.xml]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Batch files
[*.{bat,cmd}]
end_of_line = crlf

# Properties files
[*.properties]
indent_style = space
indent_size = 2

# Makefiles (require tabs)
[Makefile]
indent_style = tab
